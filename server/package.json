{
  "name": "server",
  "version": "1.0.13",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "start": "bun dist/index.js",
    "db:migrate": "bun src/db/migrate.ts",
    "db:seed": "bun src/db/seed.ts",
    "test": "DATABASE_PATH=data/test.db bun test",
    "test:watch": "DATABASE_PATH=data/test.db bun test --watch",
    "test:api": "DATABASE_PATH=data/test_api.db bun test src/__tests__/api",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.0.2",
    "@elysiajs/jwt": "^1.0.2",
    "@elysiajs/static": "^1.0.3",
    "@elysiajs/swagger": "^1.3.1",
    "drizzle-orm": "^0.45.1",
    "elysia": "^1.0.12"
  },
  "devDependencies": {
    "@types/bun": "^1.0.8",
    "drizzle-kit": "^0.31.8"
  }
}
